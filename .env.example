# Environment
NODE_ENV=development

# Application URL
APP_URL=http://localhost:3000

# Session Secret (generate with: openssl rand -base64 32)
SESSION_PASSWORD=

# Data Encryption Key (generate with: openssl rand -hex 32)
DATA_ENCRYPTION_KEY=

# Dashboard Password Hash (generate with: node -e "console.log(require('bcryptjs').hashSync('yourpassword', 10))")
DASHBOARD_PASSWORD_HASH=

# Database Connection
# For Neon (Vercel integration):
#   DATABASE_URL: Use POSTGRES_URL (pooled connection)
#   DIRECT_DATABASE_URL: Use POSTGRES_URL_NON_POOLING (direct connection)
# For local PostgreSQL:
#   DATABASE_URL=postgresql://user:password@localhost:5432/smartsuite
#   DIRECT_DATABASE_URL=postgresql://user:password@localhost:5432/smartsuite
# Note: These MUST be different for Neon (one pooled, one direct)
DATABASE_URL=
DIRECT_DATABASE_URL=

# Cron Secret (generate with: openssl rand -base64 32)
CRON_SECRET=

# Rate Limiting & Retry Configuration
WRITE_CAP_PER_MINUTE=50
MAX_RETRY_ATTEMPTS=5
RETRY_BACKOFF_MS=1000
MAX_RETRY_BACKOFF_MS=60000

# Worker Configuration
WORKER_BATCH_SIZE=25
LOCK_TIMEOUT_MS=300000

# Logging
LOG_LEVEL=debug
PRETTY_LOGS=true
